{
  "suggest.autoTrigger": "always",
  "eslint.autoFixOnSave": true,
  "eslint.enable": true,
  "eslint.filetypes": ["javascript", "typescript", "typescriptreact", "json", "javascriptreact", "typescript.tsx"],
  "tsserver.enableJavascript": true,
  "eslint.packageManager": "yarn",
  "eslint.trace.server": "verbose",
  "suggest.echodocSupport": true,
  "suggest.timeout": 500,
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "project.enable": true,
  "coc.preferences.formatOnSaveFiletypes": ["typescript", "typescriptreact", "css", "json", "javascript", "graphql", "markdown", "typescript.tsx", "reason", "c", "cpp", "rust", "haskell"],
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "rust.clippy_preference": "opt-in",
  "jest.terminalPosition": "bottom",
  "list.source.grep.useLiteral": false,
  "list.source.grep.command": "rg",
  "list.source.grep.args": ["--color","always"],
  "coc.source.file.trimSameExts": [".ts", ".js", ".tsx"],
  "coc.source.file.triggerCharacters": ["/", "./"],
  "coc.source.around.enable": false,
  "coc.source.buffer.enable": false,
  "diagnostic.virtualText": true,
  "codeLens.enable": true,
  "coc.preferences.useQuickfixForLocations": true,
  "prettier.onlyUseLocalVersion": true,
  "session.restartOnSessionLoad": true,
  "typescript.preferences.importModuleSpecifier": "auto",
  "eslint.codeAction.disableRuleComment": {
    "enable": true,
    "location": "separateLine"
  },
  "git.enableGutters": false,
  "languageserver": {
    "reason": {
      "command": "/opt/bin/reason-language-server",
      "filetypes": ["reason"],
      "settings": {
        "per_value_codelens": true,
        "dependencies_codelens": true,
        "opens_codelens": true
      }
    },
    "ccls": {
      "command": "ccls",
      "args": ["-v=1", "--log-file=/home/joe/.local/var/log/ccls.log"],
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "compilationDatabaseDirectory": "build",
        "cache": {
          "directory": ".ccls-cache"
        }
      }

    },
    "haskell": {
      "command": "hie-wrapper",
      "rootPatterns": [
        "stack.yaml",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true,
          "formattingProvider": "brittany"
        }
      }
    }
  }
}
